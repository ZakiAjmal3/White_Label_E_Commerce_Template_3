<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_dark_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:id="@+id/productImg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/no_image"/>
        <TextView
            android:id="@+id/productTopDiscountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductName"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/productImg"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/discount_gradient_bg"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/productNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductName"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/productTopDiscountTxt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ratingCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productNameTxt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/grey_dark_bg">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <TextView
                    android:id="@+id/ratingTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_filled_rating_bar"
                    android:layout_toRightOf="@id/ratingTxt"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/productDiscountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginTop="7dp"
            android:textColor="@color/red"
            android:layout_below="@id/ratingCard"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/productPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1223"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/ratingCard"
            android:layout_toRightOf="@id/productDiscountTxt"
            android:layout_marginLeft="3dp" />
        <TextView
            android:id="@+id/productPriceStrikeThroughTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="1223"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/grey_darker_bg"
            android:layout_below="@id/ratingCard"
            android:layout_toRightOf="@id/productPriceTxt"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>