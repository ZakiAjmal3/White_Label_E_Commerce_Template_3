<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="7.5dp"
    android:layout_marginTop="7.5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imgCardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/grey_bg"
            app:cardCornerRadius="10dp"
            app:strokeWidth="0dp">
            <ImageView
                android:id="@+id/productImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_image"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/productTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black Striped T-shirt"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/sizeLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productTitleTxt"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size: "/>
            <TextView
                android:id="@+id/sizeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Large"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/colorLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sizeLL"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color: "/>
            <TextView
                android:id="@+id/colorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Black"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/productPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1223"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/colorLL"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/productPriceStrikeThroughTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:text="1223"
            android:textSize="14dp"
            android:textColor="@color/grey_dark_bg"
            android:layout_below="@id/colorLL"
            android:layout_toRightOf="@id/productPriceTxt"/>
        <TextView
            android:id="@+id/productDiscountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="(Save 1223)"
            android:textSize="14dp"
            android:textColor="@color/green"
            android:layout_below="@id/productPriceTxt"
            android:layout_toRightOf="@id/imgCardView"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quantityToggleCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgCardView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="3dp"
            app:strokeWidth="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="2dp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/minusCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="2dp"
                    app:cardBackgroundColor="@color/grey_dark_bg">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_minus_white"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/quantityDisplayTxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:layout_centerVertical="true"
                    android:text="1"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/minusCard"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/plusCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_toRightOf="@id/quantityDisplayTxt"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="2dp"
                    app:cardBackgroundColor="@color/black">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_plus"/>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_dark_bg"
            android:layout_below="@id/quantityToggleCard"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/v1"
            android:weightSum="2">
            <RelativeLayout
                android:id="@+id/removeRL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_delete_grey"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv1"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Remove"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey_darker_bg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <RelativeLayout
                android:id="@+id/moveToWishlistCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_heart_grey2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv2"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="Move to Wishlist"
                    android:textColor="@color/black"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>