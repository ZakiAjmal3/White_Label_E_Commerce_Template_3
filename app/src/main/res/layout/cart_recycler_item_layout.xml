<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="7.5dp"
    android:layout_marginTop="7.5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/imgCardView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/grey_bg"
            app:cardCornerRadius="10dp"
            app:strokeWidth="0dp">
            <ImageView
                android:id="@+id/productImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/no_image"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/productTitleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black Striped T-shirt"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:padding="2dp"/>
        <LinearLayout
            android:id="@+id/sizeLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productTitleTxt"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Size: "/>
            <TextView
                android:id="@+id/sizeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Large"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/colorLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sizeLL"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color: "/>
            <TextView
                android:id="@+id/colorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Black"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/productPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/colorLL"
            android:layout_toRightOf="@id/imgCardView"
            android:layout_toLeftOf="@id/quantityLL"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/quantityLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_box_full_curved"
            android:weightSum="3"
            android:layout_weight="0.75"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/quantityMinusTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="3dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                />
            <TextView
                android:id="@+id/quantityDisplayTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/quantityPlusTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>