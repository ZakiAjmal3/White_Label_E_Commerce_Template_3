<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/grey_dark_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <ImageView
            android:id="@+id/productImg"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/no_image"/>
        <TextView
            android:id="@+id/productNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductName"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@id/productImg"
            android:layout_marginTop="5dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/productPriceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1223"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/productNameTxt"
            android:layout_marginLeft="3dp" />
        <TextView
            android:id="@+id/productPriceStrikeThroughTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="3dp"
            android:text="1223"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/grey_darker_bg"
            android:layout_below="@id/productNameTxt"
            android:layout_toRightOf="@id/productPriceTxt"/>
        <TextView
            android:id="@+id/productDiscountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Save 1223)"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_below="@id/productPriceTxt" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/moveToCartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@id/productDiscountTxt"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/cyan">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="Move to Cart"
                android:textSize="15sp"
                android:textColor="@color/cyan"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>