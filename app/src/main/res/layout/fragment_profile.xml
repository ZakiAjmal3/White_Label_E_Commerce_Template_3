<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="3dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:visibility="visible" />
            <TextView
                android:id="@+id/profileTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backBtn"
                android:layout_marginLeft="5dp"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"/>
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/topBar"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/lamp1" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userDetailsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/profileImg"
            app:cardCornerRadius="8dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/black">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">
                <RelativeLayout
                    android:id="@+id/RL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/userNameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_verified"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/userNameTxt"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_white_right"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/RL1">
                    <TextView
                        android:id="@+id/userPhoneTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9123654789"
                        android:textColor="@color/grey_darker_bg"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"/>
                    <View
                        android:id="@+id/v1"
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:background="@color/grey_darker_bg"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/userPhoneTxt"/>
                    <TextView
                        android:id="@+id/userEmailTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="example@gmail.com"
                        android:textColor="@color/grey_darker_bg"
                        android:layout_toRightOf="@id/v1"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/userDetailsCard"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:weightSum="3">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/myOrderCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/myOrderIV"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_my_order_box"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/myOrdersTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/myOrderIV"
                        android:layout_centerHorizontal="true"
                        android:text="My Orders"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/addressCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/addressIV"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_address_home"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/addressTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addressIV"
                        android:layout_centerHorizontal="true"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoutCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <ImageView
                        android:id="@+id/logoutIV"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_logout"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/logoutTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/logoutIV"
                        android:layout_centerHorizontal="true"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>